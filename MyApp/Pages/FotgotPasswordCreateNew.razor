@page "/new-password"
@using static MyApp.Pages.FotgotPasswordIsolation

<MudContainer Class="px-2">
   <MudContainer Class="text-center" Style="@ImageContainer">
   <MudImage Src="images/forgotPassword.png" Height="220"  Alt="Forgot Password" Class="ma-4"/>
</MudContainer>
<MudPaper Elevation="0" Class="px-1" Style="@PasswordFiledPaper">
   <MudContainer Class="mt-7">
       <MudInputLabel Style="@LabelStyle">New Password</MudInputLabel>
      <MudTextField
         @bind-Value="NewPassword"  Variant="Variant.Outlined" 
         Style="@PasswordFieldStyle"
         InputType="@PasswordInput"/>
   </MudContainer>
   <MudContainer Class="mt-5">
       <MudInputLabel Style="@LabelStyle">Repeat Password</MudInputLabel>
      <MudTextField
         @bind-Value="RepeatPassword"  Variant="Variant.Outlined" 
         Style="@PasswordFieldStyle"
         InputType="@PasswordInput"/>
   </MudContainer>
</MudPaper>

<MudPaper Elevation="0" Style="@PasswordPaper">
    <MudContainer Class="mt-5 mb-6">
   <MudButton Href="/password-created" Variant="Variant.Filled" Style="@ChangeButtonStyle" Color="Color.Warning" FullWidth="true">CHANGE</MudButton>
</MudContainer>
</MudPaper>
</MudContainer>

@code{

public string NewPassword { get; set;} = "";
public string RepeatPassword { get; set;} = "";
InputType PasswordInput = InputType.Password;
}