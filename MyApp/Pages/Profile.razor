@page "/"
@using static MyApp.Pages.ProfileIsolation
<MudContainer >
   <MudGrid >
      <MudItem xs="12">
         <MudPaper Elevation="0" Class="d-flex align-center justify-center mud-width-full py-8" Style="@PicContainerStyle">
            <MudAvatar Style="@AvatarStyle" Image="images/ProfilePic.png" />
         </MudPaper>
      </MudItem>
   </MudGrid>
   <MudGrid Style="@GridSpacing">
      <MudItem xs="12">
         <MudPaper Elevation="0" Class="d-flex align-center justify-center mud-width-full py-8" Style="@PicContainerStyle">
            <MudText Typo="Typo.h6" Style="@TextColor">&#64; 650John</MudText>
         </MudPaper>
      </MudItem>
   </MudGrid>
</MudContainer>
<MudNavMenu>
   @* Item 1 *@
   <MudContainer  Class="mt-4">
      <MudPaper Class="d-flex flex-grow-1 gap-4" Style="@PaperStyle" Height="45px;">
         <MudNavLink Match="NavLinkMatch.All" Href="#" Icon="@Icons.Filled.AttachMoney" >
            $2050.00
            <MudAvatar Class="mt-2 mr-3" Size="Size.Small" Style="@LinkAvatarStyle" Variant="Variant.Outlined" Color="Color.Warning">
               <MudText Typo="Typo.button" Style="@ProfileIconStyle"><i class="fa-solid fa-angle-right"></i></MudText>
            </MudAvatar>
         </MudNavLink>
      </MudPaper>
   </MudContainer>
   @* Item 2 *@
   <MudContainer  Class="mt-4">
      <MudPaper Class="d-flex flex-grow-1 gap-4" Style="@PaperStyle" Height="45px;">
         <MudNavLink  Match="NavLinkMatch.All" Href="/##" Icon="@Icons.Filled.Person" >
            Personal
            <MudAvatar Class="mt-2 mr-3" Size="Size.Small" Style="@LinkAvatarStyle" Variant="Variant.Outlined" Color="Color.Warning">
               <MudText Typo="Typo.button" Style="@ProfileIconStyle"><i class="fa-solid fa-angle-right"></i></MudText>
            </MudAvatar>
         </MudNavLink>
      </MudPaper>
   </MudContainer>
   @* Item 3 *@
   <MudContainer  Class="mt-4">
      <MudPaper Class="d-flex flex-grow-1 gap-4" Style="@PaperStyle" Height="45px;">
         <MudNavLink  Match="NavLinkMatch.All" Href="/###" Icon="@Icons.Filled.Handshake" >
            Services
            <MudAvatar Class="mt-2 mr-3" Size="Size.Small" Style="@LinkAvatarStyle" Variant="Variant.Outlined" Color="Color.Warning">
               <MudText Typo="Typo.button" Style="@ProfileIconStyle"><i class="fa-solid fa-angle-right"></i></MudText>
            </MudAvatar>
         </MudNavLink>
      </MudPaper>
   </MudContainer>
</MudNavMenu>
@* Bottom Nav Start *@
<MudPaper Elevation="3" Width="100%" Height="70px" Class="pl-4 pr-4 pt-2 d-flex " 
   Style="@BottomContainer">
   <MudPaper Class="d-flex flex-column" Elevation="0" Width="0px">
      <MudPaper Elevation="0" Width="0px">
         <MudIconButton Icon="@Icons.Filled.Home"  Style="@HomeIconStyle"  Edge="Edge.Start"/>
      </MudPaper>
      <MudPaper Elevation="0" Width="0px" Style="@HomePaperStyle">
         <MudText Style="@HomeTextStyle">Home</MudText>
      </MudPaper>
   </MudPaper>
   <MudSpacer />
   <MudPaper Class="d-flex flex-column" Elevation="0" Width="0px">
      <MudPaper Elevation="0" Width="0px">
         <MudIconButton Icon="@Icons.Filled.Movie"  Style="@SeriesIconStyle" Edge="Edge.Start"/>
      </MudPaper>
      <MudPaper Elevation="0" Width="0px" Style="@SeriesPaperStyle">
         <MudText Style="@SeriesTextStyle">Series</MudText>
      </MudPaper>
   </MudPaper>
   <MudSpacer />
   <MudPaper style="@VideoIcon">
      <MudIconButton Icon="@Icons.Filled.VideoCall" Style="@VideoIconPosition" Size="Size.Large" />
   </MudPaper>
   <MudSpacer />
   <MudPaper Class="d-flex flex-column" Elevation="0" Width="0px" >
      <MudPaper Elevation="0" Width="0px">
         <MudIconButton Style="@ListsIcon"  Icon="@Icons.Filled.ViewList" Color="Color.Inherit" Edge="Edge.Start"/>
      </MudPaper>
      <MudPaper Elevation="0" Width="0px" Style="@ListsPaper">
         <MudText Style="@ListsText">Lists</MudText>
      </MudPaper>
   </MudPaper>
   <MudSpacer />
   <MudPaper Class="d-flex flex-column" Elevation="0" Width="0px">
      <MudPaper Elevation="0" Width="0px">
         <MudIconButton Style="@SearchIcon" Icon="@Icons.Filled.Search" Color="Color.Inherit" />
      </MudPaper>
      <MudPaper Elevation="0" Width="0px" Style="@SearchPaper">
         <MudText Style="@ListsText">Search</MudText>
      </MudPaper>
   </MudPaper>
</MudPaper>
